{
  "extends": [
    "next",
    "google",
    "plugin:@typescript-eslint/recommended",
    "plugin:@tanstack/eslint-plugin-query/recommended"
  ],
  "plugins": [
    "@tanstack/query",
    "@typescript-eslint"
  ],
  "rules": {
    "valid-jsdoc": "off",
    "require-jsdoc": "off",
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "import/order": [
      1,
      {
        "groups": [
          "external",
          "builtin",
          "internal",
          "sibling",
          "parent",
          "index"
        ]
      }
    ]
  },
  "ignorePatterns": [
    "src/components/ui/**/*",
    "src/hooks/use-toast.ts",
    "src/lib/**/*"
  ]
}
